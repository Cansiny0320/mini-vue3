  
{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": false,
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "downlevelIteration": true,
    "lib": ["esnext", "dom"],
  },
  "include": ["packages/**/*"]
}